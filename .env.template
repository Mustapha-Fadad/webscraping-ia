# Environment Variables Template

# Twitter API v2 Credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Facebook Graph API
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Reddit API (optional)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AI_Community_Manager/0.1 by

# Database Configuration
DATABASE_URL=sqlite:///data/scraper.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname
# For MySQL: DATABASE_URL=mysql://user:password@localhost/dbname

# OpenAI API (for advanced NLP, optional)
OPENAI_API_KEY=your_openai_api_key_here

# Google Trends API (if available)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Scraping Settings
REQUEST_DELAY_SECONDS=1
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Rate Limiting
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=3600

# Data Storage
MAX_FILE_SIZE_MB=100
CLEANUP_OLD_FILES_DAYS=30

# Development Settings
DEBUG_MODE=false
SIMULATE_API_RESPONSES=true